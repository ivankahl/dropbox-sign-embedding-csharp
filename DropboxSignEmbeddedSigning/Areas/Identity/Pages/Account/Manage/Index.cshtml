@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="is-size-4">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="columns">
    <div class="column is-half">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="has-text-danger" role="alert"></div>
            <div class="field">
                <p class="control has-icons-left">
                    <input class="input" type="text" placeholder="Username" autocomplete="username" asp-for="Username" />
                    <span class="icon is-small is-left">
                          <span class="material-symbols-rounded">person</span>
                    </span>
                </p>
            </div>
            <div class="field">
                <p class="control has-icons-left">
                    <input class="input" type="tel" placeholder="Phone Number" autocomplete="text" asp-for="Input.PhoneNumber" />
                    <span class="icon is-small is-left">
                          <span class="material-symbols-rounded">smartphone</span>
                        </span>
                </p>
            </div>
            <span asp-validation-for="Input.PhoneNumber" class="has-text-danger"></span>
            <button id="update-profile-button" type="submit" class="button is-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
