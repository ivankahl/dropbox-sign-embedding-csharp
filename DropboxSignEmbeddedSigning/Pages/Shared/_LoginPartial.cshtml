@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="navbar-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity?.Name!</a>
    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
        <button type="submit" class="button is-white">Logout</button>
    </form>
}
else
{
    <a class="navbar-item" asp-area="Identity" asp-page="/Account/Login">Log In</a>
    <a class="button is-white" asp-area="Identity" asp-page="/Account/Register">Sign Up</a>
}